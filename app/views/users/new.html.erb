<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name, class:"label" %><br>
      <%= f.text_field :name , placeholder: "Your Full Name"%><span>*</span><br>

      <%= f.label :email, class:"label" %><br>
      <%= f.text_field :email, placeholder: "Valid Email Address" %><span>*</span><br>
	 
	  <%= f.label :address, class:"label" %><br>
      <%= f.text_field :address, placeholder: "Valid Address" %><br>
	  
	  <%= f.label :birthday, class:"label" %><br>
      <%= f.text_field :birthday, placeholder: "YYYY-MM-DD" %><br>

      <%= f.label :password, class:"label" %><br>
      <%= f.password_field :password, placeholder:"Secure Password" %><span>*</span><br>

      <%= f.label :password_confirmation, "Confirmation", class:"label" %><br>
      <%= f.password_field :password_confirmation, placeholder:"Repeat Your Password" %><span>*</span>
      <br>
      <span style="font-size:0.8em;font-style:italic;">(*): Required Field</span>
      <br>
      <%= f.submit "GO", class: "button" %>
    <% end %>
  </div>
</div>