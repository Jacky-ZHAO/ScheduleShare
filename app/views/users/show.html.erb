<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span6 offset1" id="show">
    <section>
      <h1 class="gravatar">
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <div>
        <table class="profileTable">
          <tr>
            <td>Email:</td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td>Birthday:</td>
            <td><%= @user.birthday %></td>
          </tr>
          <tr>
            <td>Address:</td>
            <td><%= @user.address %></td>
          </tr>
        </table>
      </div>
    </section>
  </aside>
</div>