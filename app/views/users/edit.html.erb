<% provide(:title, "Edit user") %>

<div class="row">
  <div class = "span4 offset1" id = "signup">
    <h1 class="signupHeading">Update</h1>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, class:"label" %><br>
      <%= f.text_field :name %><br>

      <%= f.label :email, class:"label" %><br>
      <%= f.text_field :email %><br>
	  
	  <%= f.label :motto, class:"label" %><br>
      <%= f.text_field :motto %><br>
	  
	  <%= f.label :address, class:"label" %><br>
      <%= f.text_field :address %><br>
	  
	  <%= f.label :birthday, class:"label" %><br>
      <%= f.text_field :birthday %><br>

      <%= f.label :password, class:"label" %><br>
      <%= f.password_field :password %><br>

      <%= f.label :password_confirmation, "Confirm Password", class:"label" %><br>
      <%= f.password_field :password_confirmation %><br>

      <%= f.submit "Save changes" ,class: "button"%>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>
  </div>
</div>